{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true
        }
      }
    ],
    "Properties": {
      "Application": "NorthwindTraders.Api"
    }
  },

  "Authentication": {
    "Authority": "https://dev-6yptvkjfr5raqrm3.us.auth0.com/",
    "Audience": "https://northwindtraders-api"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=NorthwindTraders;Trusted_Connection=True;TrustServerCertificate=True"
  },

  "AllowedHosts": "*"
}

